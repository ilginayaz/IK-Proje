        width: 400px;
        z-index: 1000;
        margin-right: auto;
        margin-left: auto;
    }

    .alert {
        margin-bottom: 10px;
        padding: 15px;
        border-radius: 5px;
        text-align: center;
    }

    .alert-success {
        background-color: #d4edda;

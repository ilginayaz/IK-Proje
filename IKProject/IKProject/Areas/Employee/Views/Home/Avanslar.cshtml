            color: #ffffff;
            text-align: center;
            margin-bottom: 20px;
        }

    .table {
        width: 1200px;
        border-collapse: collapse;
    }

        .table thead th {
            background-color: #1abc9c;
            color: #ffffff;
            padding: 10px;
            text-align: left;
        }

        .table tbody td {
            background-color: #34495e;
            color: #ffffff;
            padding: 10px;
        }

        .table tbody tr:nth-child(even) {
            background-color: #2c3e50;
        }

        .table tbody tr:hover {
            background-color: #1abc9c;
            color: #ffffff;
        }

    .btn-primary {
        background-color: #ff9900;
        border-color: #ff9900;
        padding: 5px 10px;
        border-radius: 5px;
        color: #ffffff;
        text-decoration: none;
        margin-right: 5px;
        display: inline-block;
    }

        .btn-primary:hover {
            background-color: #cc7a00;
            border-color: #cc7a00;
        }

    .btn-danger {
        background-color: #e74c3c;
        border-color: #e74c3c;
        padding: 5px 10px;
        border-radius: 5px;
        color: #ffffff;
        text-decoration: none;
    }

        .btn-danger:hover {
            background-color: #c0392b;
            border-color: #c0392b;
        }




    .alert-container {
        position: fixed;
        top: 120px;

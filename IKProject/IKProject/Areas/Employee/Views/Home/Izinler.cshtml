@using IKProject.Data.Concrete
@model IEnumerable<IzinIstegi>

@{
    ViewData["Title"] = "İzinler";
}

<h2>@ViewData["Title"]</h2>

<div class="table-container">
    <h2>İzin Taleplerim</h2>

    <table class="table">
        <thead>
            <tr>
                <th>Başlangıç Tarihi</th>
                <th>Bitiş Tarihi</th>
                <th>İzin Gün Sayısı</th>
                <th>İstek Yorumu</th>
                <th>İzin Türü</th>
                <th>Onay Durumu</th>
                <th>İşlem</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var izin in Model)
            {
                <tr>
                    <td>@izin.BaslangicTarihi.ToShortDateString()</td>
                    <td>@izin.BitisTarihi.ToShortDateString()</td>
                    <td>@izin.IzinGunSayisi</td>
                    <td>@izin.IstekYorumu</td>
                    <td>@izin.IzinTuru</td>
                    <td>@izin.OnayDurumu</td>
                    <td>
                        <a asp-action="IzinGuncelle" asp-route-id="@izin.Id" class="btn btn-primary">Güncelle</a>
                        <a asp-action="IzinSil" asp-route-id="@izin.Id" class="btn btn-danger" onclick="return confirm('Bu izni silmek istediğinizden emin misiniz?');">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    .table-container {
        width: 100%;
        margin: 50px auto;
        padding: 20px;
        background-color: #2c3e50;
        border-radius: 15px;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.2);
    }

        .table-container h2 {
            color: #ffffff;
            text-align: center;
            margin-bottom: 20px;
        }

    .table {
        width: 1200px;
        border-collapse: collapse;
    }

        .table thead th {
            background-color: #1abc9c;
            color: #ffffff;
            padding: 10px;
            text-align: left;
        }

        .table tbody td {
            background-color: #34495e;
            color: #ffffff;
            padding: 10px;
        }

        .table tbody tr:nth-child(even) {
            background-color: #2c3e50;
        }

        .table tbody tr:hover {
            background-color: #1abc9c;
            color: #ffffff;
        }

    .btn-primary {
        background-color: #ff9900;
        border-color: #ff9900;
        padding: 5px 10px;
        border-radius: 5px;
        color: #ffffff;
        text-decoration: none;
        margin-right: 5px;
        display: inline-block;
    }

        .btn-primary:hover {
            background-color: #cc7a00;
            border-color: #cc7a00;
        }

    .btn-danger {
        background-color: #e74c3c;
        border-color: #e74c3c;
        padding: 5px 10px;
        border-radius: 5px;
        color: #ffffff;
        text-decoration: none;
    }

        .btn-danger:hover {
            background-color: #c0392b;
            border-color: #c0392b;
        }
</style>

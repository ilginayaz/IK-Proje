@model IzinIstegiViewModel

@{
    ViewData["Title"] = "İzin Oluştur";
}

<h2>@ViewData["Title"]</h2>

<div class="form-container">
    <h2>İzin Oluştur</h2>

    <form asp-action="IzinOlustur" method="post" class="custom-form">
        <div class="form-group">
            <label asp-for="BaslangicTarihi" class="control-label">Başlangıç Tarihi</label>
            <input asp-for="BaslangicTarihi" class="form-control" type="date" />
            <span asp-validation-for="BaslangicTarihi" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="BitisTarihi" class="control-label">Bitiş Tarihi</label>
            <input asp-for="BitisTarihi" class="form-control" type="date" />
            <span asp-validation-for="BitisTarihi" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="IstekYorumu" class="control-label" >İstek Yorumu</label>
            <textarea asp-for="IstekYorumu" class="form-control"></textarea>
            <span asp-validation-for="IstekYorumu" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="IzinTuru" class="control-label">İzin Türü</label>
            <select asp-for="IzinTuru" class="form-control">
                <option value="">-- Seçiniz --</option>
                @foreach (var izinTuru in Enum.GetValues(typeof(IKProject.Data.Enums.IzinTuru)).Cast<IKProject.Data.Enums.IzinTuru>())
                {
                    <option value="@izinTuru">@izinTuru</option>
                }
            </select>
            <span asp-validation-for="IzinTuru" class="text-danger"></span>
        </div>

        <input type="hidden" asp-for="ApplicationUserId" />

        <div class="form-group text-center">
            <input type="submit" value="Oluştur" class="btn btn-primary submit-btn" />
        </div>
    </form>
</div>

<style>
    body {
        background-color: #e0e7ea; 
        font-family: 'Arial', sans-serif;
    }

    .form-container {
        width: 500px;
        margin: 50px auto;
        padding: 30px;
        background-color: #2c3e50;
        border-radius: 15px;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.2);
        position: relative;
        top: 30px;
        left: 79%;
    }

        .form-container h2 {
            color: #ffffff;
            text-align: center;
            margin-bottom: 20px;
        }

    .form-group label {
        color: #bfc9d2;
    }

    .form-control {
        background-color: #34495e;
        color: #ffffff;
        border: 1px solid #1abc9c;
        border-radius: 5px;
    }

        .form-control:focus {
            background-color: #3b5998;
            border-color: #ff9900;
            box-shadow: 0 0 8px rgba(255, 153, 0, 0.5);
        }

    select.form-control {
        background-color: #ffffff;
        color: #000000;
        border: 1px solid #1abc9c;
    }

        select.form-control option {
            background-color: #ffffff;
            color: #000000;
        }

    textarea.form-control {
        color: #ffffff !important; 
    }

    .btn-primary {
        background-color: #ff9900;
        border-color: #ff9900;
        width: 100%;
        padding: 10px;
        border-radius: 5px;
        transition: background-color 0.3s ease;
        color: #ffffff;
    }

        .btn-primary:hover {
            background-color: #cc7a00;
            border-color: #cc7a00;
        }

    .text-danger {
        color: #ff4d4d;
    }


    .alert-container {
        position: fixed;
        top: 120px;
        right: 20px;
        width: 400px;
        z-index: 1000;
        margin-right: auto;
        margin-left: auto;
    }

    .alert {
        margin-bottom: 10px;
        padding: 15px;
        border-radius: 5px;
        text-align: center;
    }

    .alert-success {
        background-color: #d4edda;
        color: #155724;
        border: 1px solid #c3e6cb;
    }

    .alert-danger {
        background-color: #f8d7da;
        color: #721c24;
        border: 1px solid #f5c6cb;
    }

</style>


@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>
}

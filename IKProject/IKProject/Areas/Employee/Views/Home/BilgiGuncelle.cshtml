@model IKProject.Models.EmployeeUpdateViewModel


@{
    ViewBag.Title = "Bilgi Güncelle";
}

@if (TempData["SuccessMessage"] != null)
{
    <div id="success-popup" class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

@section Scripts {
    <script>
        $(document).ready(function () {
            if ($('#success-popup').length) {
                
                $('#success-popup').fadeIn(500).delay(4000).fadeOut(500);
            }
        });
    </script>
    <style>
        #success-popup {
            display: none; 
            position: fixed;
            top: 20px;
            right: 20px;
            z-index: 1050;
            background-color: #28a745;
            color: white;
            padding: 15px 20px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            font-size: 16px;
        }

            #success-popup.alert-success {
                background: linear-gradient(135deg, #28a745 0%, #218838 100%);
                border: none;
            }
    </style>
}


<div class="form-container">
    <h2>Bilgilerimi Düzenle</h2>

    <form asp-action="BilgiGuncelle" asp-controller="Home" method="post" enctype="multipart/form-data">

        <div class="form-group">
            <label asp-for="ProfilePhoto">Profil Fotoğrafı</label>
            <input asp-for="ProfilePhoto" class="form-control" />
            <span asp-validation-for="ProfilePhoto" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="TelefonNumarasi">Telefon Numarası</label>
            <input asp-for="TelefonNumarasi" class="form-control" />
            <span asp-validation-for="TelefonNumarasi" class="text-danger"></span>
        </div>

       

        <div class="form-group">
            <label asp-for="Adres">Adres</label>
            <input asp-for="Adres" class="form-control" />
            <span asp-validation-for="Adres" class="text-danger"></span>
        </div>



        <button type="submit" class="btn btn-primary">Güncelle</button>
    </form>
</div>





<style>
    body {
        background-color: #e0e7ea;
        font-family: 'Arial', sans-serif;
    }

    .form-container {
        width: 500px;
        margin: 50px auto;
        padding: 30px;
        background-color: #2c3e50;
        border-radius: 15px;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.2);
        position: relative;
        top: 75px;
        left: 79%;
    }

        .form-container h2 {
            color: #ffffff;
            text-align: center;
            margin-bottom: 20px;
        }

    .form-group label {
        color: #bfc9d2;
    }

    .form-control {
        background-color: #34495e;
        color: #ffffff;
        border: 1px solid #1abc9c;
        border-radius: 5px;
    }

        .form-control:focus {
            background-color: #3b5998;
            border-color: #ff9900;
            box-shadow: 0 0 8px rgba(255, 153, 0, 0.5);
        }

    select.form-control {
        background-color: #ffffff;
        color: #000000;
        border: 1px solid #1abc9c;
    }

        select.form-control option {
            background-color: #ffffff;
            color: #000000;
        }

    textarea.form-control {
        color: #ffffff !important;
    }
    .btn-primary {
        background-color: #ff9900;
        border-color: #ff9900;
        width: 100%;
        padding: 10px;
        border-radius: 5px;
        transition: background-color 0.3s ease;
        color: #ffffff;
    }

        .btn-primary:hover {
            background-color: #cc7a00;
            border-color: #cc7a00;
        }

    .text-danger {
        color: #ff4d4d;
    }

</style>

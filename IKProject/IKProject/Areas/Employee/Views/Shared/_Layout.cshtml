@using System.Security.Claims
@{
    var nameClaim = User.FindFirst("http://schemas.xmlsoap.org/ws/2005/05/identity/claims/name")?.Value;
    var surnameClaim = User.FindFirst("http://schemas.xmlsoap.org/ws/2005/05/identity/claims/surname")?.Value;
    var photoClaim = User.FindFirst("http://schemas.xmlsoap.org/ws/2005/05/identity/claims/uri")?.Value;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>FHYI Admin</title>
    <!-- plugins:css -->
    <link rel="stylesheet" href="~/dashboardcss/vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="~/dashboardcss/vendors/css/vendor.bundle.base.css">
    <!-- endinject -->
    <!-- Plugin css for this page -->
    <link rel="stylesheet" href="~/dashboardcss/vendors/jvectormap/jquery-jvectormap.css">
    <link rel="stylesheet" href="~/dashboardcss/vendors/flag-icon-css/css/flag-icon.min.css">
    <link rel="stylesheet" href="~/dashboardcss/vendors/owl-carousel-2/owl.carousel.min.css">
    <link rel="stylesheet" href="~/dashboardcss/vendors/owl-carousel-2/owl.theme.default.min.css">
    <!-- End plugin css for this page -->
    <!-- inject:css -->
    <!-- endinject -->
    <!-- Layout styles -->
    <link rel="stylesheet" href="~/dashboardcss/css/style.css">
    <!-- End layout styles -->
    <link rel="shortcut icon" href="~/dashboardcss/images/favicon.png" />
</head>
<body>
    <div class="container-scroller">
        <!-- partial:partials/_sidebar.html -->
        <nav class="sidebar sidebar-offcanvas" id="sidebar">
            <div class="sidebar-brand-wrapper d-none d-lg-flex align-items-center justify-content-center fixed-top">
                <a class="sidebar-brand brand-logo" asp-action="Index"><img src="~/dashboardcss/images/fhyilogo.svg" alt="logo" /></a>
                <a class="sidebar-brand brand-logo-mini"><img src="~/dashboardcss/images/fhyilogo.svg" alt="logo" /></a>
            </div>
            <ul class="nav">
                <li class="nav-item profile">
                    <div class="profile-desc">
                        <div class="profile-pic">
                            <div class="count-indicator">
                                <img src="@photoClaim" alt="Personel Fotoğrafı" class="img-xs rounded-circle">
                                <span class="count bg-success"></span>
                            </div>
                            <div class="profile-name">
                                <h5 class="mb-0 font-weight-normal">@nameClaim @surnameClaim</h5>
                               
                            </div>
                        </div>

                    </div>
                </li>
                <li class="nav-item nav-category">
                    <span class="nav-link">İşlemler</span>
                </li>
                <li class="nav-item menu-items">
                    <a class="nav-link" asp-area="Employee" asp-controller="Home" asp-action="Index">
                        <span class="menu-icon">
                            <i class="mdi mdi-speedometer"></i>
                        </span>
                        <span class="menu-title">Anasayfa</span>
                    </a>
                </li>
                <li class="nav-item menu-items">
                    <a class="nav-link" asp-area="Employee" asp-controller="Home" asp-action="Avanslar">
                        <span class="menu-icon">
                            <i class="mdi mdi-speedometer"></i>
                        </span>
                        <span class="menu-title">Avanslar</span>
                    </a>
                </li>
                <li class="nav-item menu-items">
                    <a class="nav-link" asp-area="Employee" asp-controller="Home" asp-action="AvansOlustur">
                        <span class="menu-icon">
                            <i class="mdi mdi-speedometer"></i>
                        </span>
                        <span class="menu-title">Avans Oluştur</span>
                    </a>
                </li>
                <li class="nav-item menu-items">
                    <a class="nav-link" asp-area="Employee" asp-controller="Home" asp-action="Harcamalar">
                        <span class="menu-icon">
                            <i class="mdi mdi-speedometer"></i>
                        </span>
                        <span class="menu-title">Harcamalar</span>
                    </a>
                </li>
                <li class="nav-item menu-items">
                    <a class="nav-link" asp-area="Employee" asp-controller="Home" asp-action="HarcamaOlustur">
                        <span class="menu-icon">
                            <i class="mdi mdi-speedometer"></i>
                        </span>
                        <span class="menu-title">Harcama Oluştur</span>
                    </a>
                </li>
                <li class="nav-item menu-items">
                    <a class="nav-link" asp-area="Employee" asp-controller="Home" asp-action="Izinler">
                        <span class="menu-icon">
                            <i class="mdi mdi-speedometer"></i>
                        </span>
                        <span class="menu-title">İzinler</span>
                    </a>
                </li>
                <li class="nav-item menu-items">
                    <a class="nav-link" asp-area="Employee" asp-controller="Home" asp-action="IzinOlustur">
                        <span class="menu-icon">
                            <i class="mdi mdi-speedometer"></i>
                        </span>
                        <span class="menu-title">İzin Oluştur</span>
                    </a>
                </li>
                <li class="nav-item menu-items">
                    <a class="nav-link" asp-area="Employee" asp-controller="Home" asp-action="BilgiGuncelle">
                        <span class="menu-icon">
                            <i class="mdi mdi-speedometer"></i>
                        </span>
                        <span class="menu-title">Bilgilerimi Güncelle</span>
                    </a>
                </li>

                
               

                
                

                




            </ul>
        </nav>
        <!-- partial -->
        <div class="container-fluid page-body-wrapper">
            <!-- partial:partials/_navbar.html -->
            <nav class="navbar p-0 fixed-top d-flex flex-row">
                <div class="navbar-brand-wrapper d-flex d-lg-none align-items-center justify-content-center">
                    <a class="navbar-brand brand-logo-mini" href="index.html"><img src="assets/images/logo-mini.svg" alt="logo" /></a>
                </div>
                <div class="navbar-menu-wrapper flex-grow d-flex align-items-stretch">
                    <button class="navbar-toggler navbar-toggler align-self-center" type="button" data-toggle="minimize">
                        <span class="mdi mdi-menu"></span>
                    </button>

                    <ul class="navbar-nav navbar-nav-right">

                        <li class="nav-item dropdown">
                            <a class="nav-link" id="profileDropdown" href="#" data-toggle="dropdown">
                                <div class="navbar-profile">
                                    <img src="@photoClaim" alt="Personel Fotoğrafı" class="profile-img" style="height:40px">
                                    <p class="mb-0 d-none d-sm-block navbar-profile-name">@nameClaim @surnameClaim</p>
                                    <i class="mdi mdi-menu-down d-none d-sm-block"></i>
                                </div>
                            </a>
                            <div class="dropdown-menu dropdown-menu-right navbar-dropdown preview-list" aria-labelledby="profileDropdown">
                                <h6 class="p-3 mb-0">Profile</h6>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item preview-item" href="@Url.Action("EditProfile", "Home", new { area = "Employee" })">
                                    <div class="preview-thumbnail">
                                        <div class="preview-icon bg-dark rounded-circle">
                                            <i class="mdi mdi-settings text-success"></i>
                                        </div>
                                    </div>
                                    <div class="preview-item-content">
                                        <p class="preview-subject mb-1">Hesap Ayarları</p>
                                    </div>
                                </a>
                                <div class="dropdown-divider"></div>
                                <a href="@Url.Action("ChangePassword", "Home", new { area = "Employee" })" class="dropdown-item preview-item">
                                    <div class="preview-thumbnail">
                                        <div class="preview-icon bg-dark rounded-circle">
                                            <i class="mdi mdi-onepassword  text-info"></i>
                                        </div>
                                    </div>
                                    <div class="preview-item-content">
                                        <p class="preview-subject ellipsis mb-1 text-small">Şifreyi Değiştir</p>
                                    </div>
                                </a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item preview-item">
                                    <div class="preview-thumbnail">
                                        <div class="preview-icon bg-dark rounded-circle">
                                            <i class="mdi mdi-logout text-danger"></i>
                                        </div>
                                    </div>
                                    <div class="preview-item-content">
                                        <form action="/Account/Logout" method="post" style="display:inline;">
                                            <button type="submit" class="logout-button" style="background: none; border: none; padding: 0; margin: 0; cursor: pointer;">
                                                <p class="preview-subject mb-1" style="color: white;">Çıkış Yap</p>
                                            </button>
                                        </form>
                                    </div>
                                </a>
                            </div>
                        </li>
                    </ul>
                    <button class="navbar-toggler navbar-toggler-right d-lg-none align-self-center" type="button" data-toggle="offcanvas">
                        <span class="mdi mdi-format-line-spacing"></span>
                    </button>
                </div>
            </nav>
            </aside>
            <div class="main-content">
                <header>
                    <div class="header-left">
                        <!-- Space for logo if needed -->
                    </div>
                    <div class="header-right">
                        <span>@User.Identity.Name</span>

                    </div>
                </header>
                <main role="main" class="content">
                    @RenderBody()
                </main>
            </div>
        </div>
        <script src="~/dashboardcss/vendors/js/vendor.bundle.base.js"></script>
        <!-- endinject -->
        <!-- Plugin js for this page -->
        <script src="~/dashboardcss/vendors/chart.js/Chart.min.js"></script>
        <script src="~/dashboardcss/vendors/progressbar.js/progressbar.min.js"></script>
        <script src="~/dashboardcss/vendors/jvectormap/jquery-jvectormap.min.js"></script>
        <script src="~/dashboardcss/vendors/jvectormap/jquery-jvectormap-world-mill-en.js"></script>
        <script src="~/dashboardcss/vendors/owl-carousel-2/owl.carousel.min.js"></script>
        <!-- End plugin js for this page -->
        <!-- inject:js -->
        <script src="~/dashboardcss/js/off-canvas.js"></script>
        <script src="~/dashboardcss/js/hoverable-collapse.js"></script>
        <script src="~/dashboardcss/js/misc.js"></script>
        <script src="~/dashboardcss/js/settings.js"></script>
        <script src="~/dashboardcss/js/todolist.js"></script>
        <!-- endinject -->
        <!-- Custom js for this page -->
        <script src="~/dashboardcss/js/dashboard.js"></script>

        @RenderSection("Scripts", required: false)

</body>
</html>

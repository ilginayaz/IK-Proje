    <style>
        .cardd {
            border-radius: 15px;
            background: linear-gradient(to right, darkblue , #FFA27F);
            padding: 20px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.15);
            max-width: 800px;
            margin: 30px;
            color: #ffffff;
        }

        .cardd-body {
            padding: 20px;
            background: #ffffff;
            border-radius: 10px;
            color: #333333;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
            height: 100%;
        }

        .card-title {
            font-size: 24px;
            margin-bottom: 20px;
            color: #FF0000;
            text-align: center;
        }

        .summary-card {
            display: flex;
            justify-content: space-between;
            gap: 20px;
            height: 100%;
        }

        .info-column {
            flex: 1;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }

            .info-column p {
                margin: 8px 0;
                font-size: 16px;
                font-weight: 500;
            }

        .btn-edit {
            display: block;
            width: 100%;
            padding: 10px;
            background-color: #FF0000;
            color: #FFA27F;
            font-weight: bold;
            border: none;
            border-radius: 5px;
            font-size: 16px;
            cursor: pointer;
            margin-top: 20px;
            transition: background-color 0.3s ease;
        }

            .btn-edit:hover {
                background-color: #FFA27F;
                color: #FF0000;
            }

        .profile-img {
            width: 100%;
            max-width: 150px;
            height: auto;
            border-radius: 50%;
            margin: 0 auto 20px auto;
            display: block;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }</style>
</head>
<body>

    <div class="main-panel">
        <div class="container mt-4">
            <div class="row">
                <div @* class="col-md-4 *@">
                    <div class="cardd" style="max-width:1000px">
                        <div class="cardd-body" style="max-width:1000px">
                            <h4 class="card-title">Yönetici Bilgileri</h4>
                            <div class="summary-card" style="max-width:1000px">
                                <div class="info-column">
                                    <img src="/dashboardcss/images/faces/face2.jpg" alt="Yönetici Fotoğrafı" class="profile-img">
                                </div>
                                <div class="info-column">
                                    <p><strong>Ad:</strong> Furkan </p>
                                    <p><strong>Soyad:</strong> Baybura</p>
                                    <p><strong>Telefon:</strong> 5066705958</p>
                                    <p><strong>Doğum Tarihi:</strong> 31.07.1998</p>
                                    <p><strong>Doğum Yeri:</strong> Konya</p>
                                </div>
                                <div class="info-column">
                                    <p><strong>TC Kimlik Numarası:</strong> 1111111111</p>
                                    <p><strong>Email:</strong> furkanbaybura@hotmail.com</p>
                                    <p><strong>Departman:</strong> Yazılım</p>
                                    <p><strong>Adres:</strong> Ankara</p>
                                    <a href="@Url.Action("EditProfile", "Home", new { area = "Admin" })">
                                        <button class="btn-edit">Düzenle</button>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
        
   
    <script src="assets/vendors/js/vendor.bundle.base.js"></script>
   

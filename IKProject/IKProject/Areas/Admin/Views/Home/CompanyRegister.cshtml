@model IKProject.Models.SirketRegisterModel
@using IKProject.Data.Enums
@{
    ViewData["Title"] = "Şirket Ekle";
}

<div class="form-container">
    <h2>Şirket Ekle</h2>

    <form asp-action="CompanyRegister" method="post">
        <div class="form-group">
            <label asp-for="SirketAdi"></label>
            <input asp-for="SirketAdi" class="form-control" />
            <span asp-validation-for="SirketAdi" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="SirketNumarasi"></label>
            <input asp-for="SirketNumarasi" class="form-control" />
            <span asp-validation-for="SirketNumarasi" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="VergiNo"></label>
            <input asp-for="VergiNo" class="form-control" />
            <span asp-validation-for="VergiNo" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="VergiOfisi"></label>
            <input asp-for="VergiOfisi" class="form-control" />
            <span asp-validation-for="VergiOfisi" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="CalisanSayisi"></label>
            <input asp-for="CalisanSayisi" class="form-control" />
            <span asp-validation-for="CalisanSayisi" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="SirketEmail"></label>
            <input asp-for="SirketEmail" class="form-control" />
            <span asp-validation-for="SirketEmail" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Address"></label>
            <input asp-for="Address" class="form-control" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="PostaKodu"></label>
            <input asp-for="PostaKodu" class="form-control" />
            <span asp-validation-for="PostaKodu" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Sehir" class="control-label"></label>
            <select asp-for="Sehir" asp-items="@(new SelectList(Enum.GetValues(typeof(Sehirler))))" class="form-control"></select>
            <span asp-validation-for="Sehir" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Personel Ekle</button>
    </form>
</div>

<style>
    body {
        background-color: #e0e7ea;
        font-family: 'Arial', sans-serif;
    }

    .form-container {
        width: 100%;
        max-width: 500px;
        margin: 0 auto;
        padding: 30px;
        background-color: #2c3e50;
        border-radius: 15px;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.2);
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
    }

        .form-container h2 {
            color: #ffffff;
            text-align: center;
            margin-bottom: 20px;
        }

    .form-group label {
        color: #bfc9d2;
    }

    .form-control {
        background-color: #34495e;
        color: #ffffff;
        border: 1px solid #1abc9c;
        border-radius: 5px;
    }

        .form-control:focus {
            background-color: #3b5998;
            border-color: #ff9900;
            box-shadow: 0 0 8px rgba(255, 153, 0, 0.5);
        }

    select.form-control {
        background-color: #ffffff;
        color: #000000;
        border: 1px solid #1abc9c;
    }

        select.form-control option {
            background-color: #ffffff;
            color: #000000;
        }

    .btn-primary {
        background-color: #ff9900;
        border-color: #ff9900;
        width: 100%;
        padding: 10px;
        border-radius: 5px;
        transition: background-color 0.3s ease;
        color: #ffffff;
    }

        .btn-primary:hover {
            background-color: #cc7a00;
            border-color: #cc7a00;
        }

    .text-danger {
        color: #ff4d4d;
    }
</style>
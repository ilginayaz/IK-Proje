@model AssignCompanyManagerViewModel

<br />
<br />
<br />
<div class="form-container">
    <h2>Yönetici Ata</h2>
    <form asp-action="AssignCompanyManager" method="post" id="assignManagerForm">
        <div class="form-group">
            <label for="SirketId">Şirket Seçin</label>
            <select id="SirketId" name="SirketId" class="form-control" asp-for="SirketId">
                <option value="">Şirket Seçin</option>
                @if (ViewBag.Sirketler != null)
                {
                    @foreach (var sirket in ViewBag.Sirketler as IEnumerable<SelectListItem>)
                    {
                        <option value="@sirket.Value">@sirket.Text</option>
                    }
                }
            </select>
            <span asp-validation-for="SirketId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="YoneticiId">Yönetici Seçin</label>
            <select id="YoneticiId" name="YoneticiId" class="form-control" asp-for="YoneticiId">
                <option value="">Yönetici Seçin</option>
                @if (ViewBag.Yoneticiler != null)
                {
                    @foreach (var yonetici in ViewBag.Yoneticiler as IEnumerable<SelectListItem>)
                    {
                        <option value="@yonetici.Value">@yonetici.Text</option>
                    }
                }
            </select>
            <span asp-validation-for="YoneticiId" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Yönetici Ata</button>
    </form>

    @if (ViewBag.ErrorMessage != null)
    {
        <div class="alert alert-danger">
            @ViewBag.ErrorMessage
        </div>
    }
</div>

<style>
    body {
        background-color: #e0e7ea;
        font-family: 'Arial', sans-serif;
    }

    .form-container {
        width: 800px;
        margin: 50px;
        margin-left: 250px;
        padding: 30px;
        background-color: #2c3e50;
        border-radius: 15px;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.2);
    }

        .form-container h2 {
            color: #ffffff;
            text-align: center;
            margin-bottom: 20px;
        }

    .form-group label {
        color: #bfc9d2;
    }

    .form-control {
        background-color: #34495e;
        color: #ffffff;
        border: 1px solid #1abc9c;
        border-radius: 5px;
    }

        .form-control:focus {
            background-color: #3b5998;
            border-color: #ff9900;
            box-shadow: 0 0 8px rgba(255, 153, 0, 0.5);
        }

    select.form-control {
        background-color: #ffffff;
        color: #000000;
        border: 1px solid #1abc9c;
    }

        select.form-control option {
            background-color: #ffffff;
            color: #000000;
        }

    .form-control,
    .form-control::placeholder,
    textarea.form-control {
        background-color: #34495e;
        color: #ffffff !important;
    }

    textarea.form-control {
        background-color: #34495e;
        color: #ffffff !important;
    }

    .btn-primary {
        background-color: #ff9900;
        border-color: #ff9900;
        width: 100%;
        padding: 10px;
        border-radius: 5px;
        transition: background-color 0.3s ease;
        color: #ffffff;
    }

        .btn-primary:hover {
            background-color: #cc7a00;
            border-color: #cc7a00;
        }

    .text-danger {
        color: #ff4d4d;
    }
</style>

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Your Application</title>
    <link rel="stylesheet" type="text/css" href="~/yoneticicss/css/styles.css" />
</head>
<body>
    <div class="container">
        <aside class="sidebar">
            <div class="logo">
                <img src="~/yoneticicss/images/logo.png" alt="FYHI İnsan Kaynakları Logo" />
            </div>
            <nav>
                <ul>
                    <li><a href="#">Anasayfa</a></li>
                    <li><a href="#">Profil</a></li>
                    <li><a href="#">Şirket</a></li>
                    <li><a href="#">İzinler</a></li>
                    <li><a href="#">Masraflar</a></li>
                    <li><a href="#">Takvim</a></li>
                    <li><a href="#">Ayarlar</a></li>
                </ul>
            </nav>
        </aside>
        <div class="main-content">
            <header>
                <div class="header-left">
                    <!-- Space for logo if needed -->
                </div>
                <div class="header-right">
                    <span>@User.Identity.Name</span>
                    <form action="/Account/Logout" method="post" style="display:inline;">
                        <button type="submit" class="logout-button">Çıkış Yap</button>
                    </form>
                </div>
            </header>
            <main role="main" class="content">
                @RenderBody()
            </main>
        </div>
    </div>
    <script src="~/yoneticicss/js/scripts.js"></script>
</body>
</html>  
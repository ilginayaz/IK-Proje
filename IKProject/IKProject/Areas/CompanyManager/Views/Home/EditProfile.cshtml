@model IKProject.Models.UpdateProfileViewModel


@{
    ViewBag.Title = "Hesap Ayarları";
}

<div class="container">

    <div class="alert-container">
        @if (ViewBag.SuccessMessage != null)
        {
            <div class="alert alert-success">
                @ViewBag.SuccessMessage
            </div>
        }
        @if (ViewBag.ErrorMessage != null)
        {
            <div class="alert alert-danger">
                @ViewBag.ErrorMessage
            </div>
        }
    </div>

    <div class="form-container">
        <h2>Profil Düzenle</h2>

        <form asp-action="EditProfile" asp-controller="Home" method="post" enctype="multipart/form-data">

            <div class="form-group">
                <label asp-for="ProfilePhoto"></label>
                <input asp-for="ProfilePhoto" class="form-control" />
                <span asp-validation-for="ProfilePhoto" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>



            <div class="form-group">
                <label asp-for="TelefonNumarasi"></label>
                <input asp-for="TelefonNumarasi" class="form-control" />
                <span asp-validation-for="TelefonNumarasi" class="text-danger"></span>
            </div>



            <div class="form-group">
                <label asp-for="Adres"></label>
                <input asp-for="Adres" class="form-control" />
                <span asp-validation-for="Adres" class="text-danger"></span>
            </div>



            <button type="submit" class="btn btn-primary">Güncelle</button>
        </form>
    </div>
</div>




<style>
    body {
        background-color: #e0e7ea;
        font-family: 'Arial', sans-serif;
    }

    .form-container {
        width: 400px;
        margin: 50px 100px;
        padding: 30px;
        background-color: #2c3e50;
        border-radius: 15px;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.2);
    }

        .form-container h2 {
            color: #ffffff;
            text-align: center;
            margin-bottom: 20px;
        }

    .form-group label {
        color: #bfc9d2;
    }

    .form-control {
        background-color: #34495e;
        color: #ffffff;
        border: 1px solid #1abc9c;
        border-radius: 5px;
    }

        .form-control:focus {
            background-color: #3b5998;
            border-color: #ff9900;
            box-shadow: 0 0 8px rgba(255, 153, 0, 0.5);
        }

    select.form-control {
        background-color: #ffffff;
        color: #000000;
        border: 1px solid #1abc9c;
    }

        select.form-control option {
            background-color: #ffffff;
            color: #000000;
        }

    textarea.form-control {
        color: #ffffff !important;
    }

    .btn-primary {
        background-color: #ff9900;
        border-color: #ff9900;
        width: 100%;
        padding: 10px;
        border-radius: 5px;
        transition: background-color 0.3s ease;
        color: #ffffff;
    }

        .btn-primary:hover {
            background-color: #cc7a00;
            border-color: #cc7a00;
        }

    .text-danger {
        color: #ff4d4d;
    }



    .alert-container {
        position: fixed;
        top: 120px;
        right: 20px;
        width: 400px;
        z-index: 1000;
        margin-right: auto;
        margin-left: auto;
    }

    .alert {
        margin-bottom: 10px;
        padding: 15px;
        border-radius: 5px;
        text-align: center;
    }

    .alert-success {
        background-color: #d4edda;
        color: #155724;
        border: 1px solid #c3e6cb;
    }

    .alert-danger {
        background-color: #f8d7da;
        color: #721c24;
        border: 1px solid #f5c6cb;
    }
</style>

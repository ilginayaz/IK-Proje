@using IKProject.Data.Concrete
@model List<IzinIstegi>

@{
    ViewData["Title"] = "Bekleyen İzinler";
}

<h2>@ViewData["Title"]</h2>


<div class="alert-container">
    @if (ViewBag.SuccessMessage != null)
    {
        <div class="alert alert-success">
            @ViewBag.SuccessMessage
        </div>
    }
    @if (ViewBag.ErrorMessage != null)
    {
        <div class="alert alert-danger">
            @ViewBag.ErrorMessage
        </div>
    }
</div>


    <div class="table-container">
        <h2>İzinler</h2>
        <table class="table">
            <thead>
                <tr>
                    <th>Adı Soyadı</th>
                    <th>Başlangıç Tarihi</th>
                    <th>Bitiş Tarihi</th>
                    <th>İzin Gün Sayısı</th>
                    <th>İstek Yorumu</th>
                    <th>İzin Türü</th>
                    <th>Onay Durumu</th>
                    <th>İşlem</th>
                </tr>
            </thead>
            @if (Model != null)
            {

                <tbody>
                    @foreach (var izin in Model)
                    {
                        <tr>
                            <td>@izin.ApplicationUser.Adi @izin.ApplicationUser.Soyadi</td>
                            <td>@izin.BaslangicTarihi.ToShortDateString()</td>
                            <td>@izin.BitisTarihi.ToShortDateString()</td>
                            <td>@izin.IzinGunSayisi</td>
                            <td>@izin.IstekYorumu</td>
                            <td>@izin.IzinTuru</td>
                            <td>@izin.OnayDurumu</td>

                            <td>
                                <a asp-action="OnaylaIzin" asp-route-id="@izin.Id" class="btn btn-primary">Onayla</a>
                                <a asp-action="ReddetIzin" asp-route-id="@izin.Id" class="btn btn-danger" onclick="return confirm('Bu izni silmek istediğinizden emin misiniz?');">Reddet</a>
                            </td>
                        </tr>
                    }
                </tbody>
            }
        </table>
    </div>

<style>
    .table-container {
        width: 100%;
        margin: 50px auto;
        padding: 20px;
        background-color: #2c3e50;
        border-radius: 15px;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.2);
    }

        .table-container h2 {
            color: #ffffff;
            text-align: center;
            margin-bottom: 20px;
        }

    .table {
        width: 1200px;
        border-collapse: collapse;
    }

        .table thead th {
            background-color: #1abc9c;
            color: #ffffff;
            padding: 10px;
            text-align: left;
        }

        .table tbody td {
            background-color: #34495e;
            color: #ffffff;
            padding: 10px;
        }

        .table tbody tr:nth-child(even) {
            background-color: #2c3e50;
        }

        .table tbody tr:hover {
            background-color: #1abc9c;
            color: #ffffff;
        }

    .btn-primary {
        background-color: #ff9900;
        border-color: #ff9900;
        padding: 5px 10px;
        border-radius: 5px;
        color: #ffffff;
        text-decoration: none;
        margin-right: 5px;
        display: inline-block;
    }

        .btn-primary:hover {
            background-color: #cc7a00;
            border-color: #cc7a00;
        }

    .btn-danger {
        background-color: #e74c3c;
        border-color: #e74c3c;
        padding: 5px 10px;
        border-radius: 5px;
        color: #ffffff;
        text-decoration: none;
    }

        .btn-danger:hover {
            background-color: #c0392b;
            border-color: #c0392b;
        }




    .alert-container {
        position: fixed;
        top: 120px;
        right: 20px;
        width: 400px;
        z-index: 1000;
        margin-right: auto;
        margin-left: auto;
    }

    .alert {
        margin-bottom: 10px;
        padding: 15px;
        border-radius: 5px;
        text-align: center;
    }

    .alert-success {
        background-color: #d4edda;
        color: #155724;
        border: 1px solid #c3e6cb;
    }

    .alert-danger {
        background-color: #f8d7da;
        color: #721c24;
        border: 1px solid #f5c6cb;
    }
</style>

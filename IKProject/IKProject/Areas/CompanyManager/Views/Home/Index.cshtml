@using IKProject.Data.Concrete
@model ApplicationUser
<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>FHYI Admin</title>
    <!-- plugins:css -->
    <link rel="stylesheet" href="~/dashboardcss/vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="assets/vendors/css/vendor.bundle.base.css">
    <!-- endinject -->
    <!-- Plugin css for this page -->
    <link rel="stylesheet" href="~/dashboardcss/vendors/jvectormap/jquery-jvectormap.css">
    <link rel="stylesheet" href="~/dashboardcss/vendors/flag-icon-css/css/flag-icon.min.css">
    <link rel="stylesheet" href="~/dashboardcss/vendors/owl-carousel-2/owl.carousel.min.css">
    <link rel="stylesheet" href="~/dashboardcss/vendors/owl-carousel-2/owl.theme.default.min.css">
    <!-- End plugin css for this page -->
    <!-- inject:css -->
    <!-- endinject -->
    <!-- Layout styles -->
    <link rel="stylesheet" href="~/dashboardcss/css/style.css">
    <!-- End layout styles -->
    <link rel="shortcut icon" href="~/dashboardcss/images/favicon.png" />
    <style>
        .cardd {
            border-radius: 15px;
            background: linear-gradient(to right, #FF0000, #FFA27F);
            padding: 20px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.15);
            width: 1000px;
            margin: 30px;
            color: #ffffff;
        }

        .cardd-body {
            padding: 20px;
            background: #ffffff;
            border-radius: 10px;
            color: #333333;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
            height: 100%;
        }

        .card-title {
            font-size: 24px;
            margin-bottom: 20px;
            color: #FF0000;
            text-align: center;
        }

        .summary-card {
            display: flex;
            justify-content: space-between;
            gap: 20px;
            height: 100%;
        }

        .info-column {
            flex: 1;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }

            .info-column p {
                margin: 8px 0;
                font-size: 16px;
                font-weight: 500;
            }

        .btn-edit {
            display: block;
            width: 100%;
            padding: 10px;
            background-color: #FF0000;
            color: #FFA27F;
            font-weight: bold;
            border: none;
            border-radius: 5px;
            font-size: 16px;
            cursor: pointer;
            margin-top: 20px;
            transition: background-color 0.3s ease;
        }

            .btn-edit:hover {
                background-color: #FFA27F;
                color: #FF0000;
            }

        .profile-img {
            width: 100%;
            max-width: 150px;
            height: auto;
            border-radius: 50%;
            margin: 0 auto 20px auto;
            display: block;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }



        /* Popup için */

        .modal {
            display: none;
            position: fixed;
            z-index: 1;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            overflow: auto;
            background-color: rgba(0, 0, 0, 0.5);
        }


        .modal-content {
            background: linear-gradient(to right, #FF0000, #FFA27F);
            margin: 5% auto;
            padding: 20px;
            border-radius: 15px;
            width: 90%;
            max-width: 600px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.15);
            color: #ffffff;
        }


        .close-button {
            color: #ffffff;
            float: right;
            font-size: 28px;
            font-weight: bold;
        }

            .close-button:hover,
            .close-button:focus {
                color: #fff;
                text-decoration: none;
                cursor: pointer;
            }


        .form-group {
            margin-bottom: 15px;
        }

            .form-group label {
                display: block;
                margin-bottom: 5px;
                font-weight: bold;
                color: #ffffff;
            }

            .form-group input {
                width: 100%;
                padding: 8px;
                border: 2px solid #ccc;
                border-radius: 5px;
                box-sizing: border-box;
                transition: border-color 0.3s ease;
                background: #ffffff;
            }

                .form-group input:focus {
                    border-color: #FFA27F;
                    outline: none;
                }


        .btn-edit {
            display: block;
            width: 100%;
            padding: 10px;
            background-color: #FFA27F;
            color: #FF0000;
            border: none;
            border-radius: 5px;
            font-size: 16px;
            font-weight: bold;
            cursor: pointer;
            margin-top: 20px;
            transition: background-color 0.3s ease;
        }

            .btn-edit:hover {
                background-color: #FF0000;
                color: #FFA27F;
            }

        .modal {
            display: none;
            position: fixed;
            z-index: 1;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            overflow: auto;
            background-color: rgba(0, 0, 0, 0.5);
        }


        .modal-content {
            background: linear-gradient(to right, #FF0000, #FFA27F);
            margin: 5% auto;
            padding: 20px;
            border-radius: 15px;
            width: 90%;
            max-width: 600px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.15);
            color: #ffffff;
        }


        .close-button {
            color: #ffffff;
            float: right;
            font-size: 28px;
            font-weight: bold;
        }

            .close-button:hover,
            .close-button:focus {
                color: #fff;
                text-decoration: none;
                cursor: pointer;
            }


        .form-group {
            margin-bottom: 15px;
        }

            .form-group label {
                display: block;
                margin-bottom: 5px;
                font-weight: bold;
                color: #ffffff;
            }

            .form-group input {
                width: 100%;
                padding: 8px;
                border: 2px solid #ccc;
                border-radius: 5px;
                box-sizing: border-box;
                transition: border-color 0.3s ease;
                background: #ffffff;
            }

                .form-group input:focus {
                    border-color: #FFA27F;
                    outline: none;
                }


        .btnn-edit {
            display: block;
            width: 100%;
            padding: 10px;
            background-color: #FFA27F;
            color: #FF0000;
            border: none;
            border-radius: 5px;
            font-size: 16px;
            font-weight: bold;
            cursor: pointer;
            margin-top: 20px;
            transition: background-color 0.3s ease;
        }

            .btnn-edit:hover {
                background-color: #FF0000;
                color: #FFA27F;
                text-transform: uppercase;
            }

    </style>
</head>
<body>




    <!-- partial -->
    <div class="main-panel">
        <div class="container mt-4">
            <div class="row">
                <div @* class="col-md-4 *@">
                    <div class="cardd" style="max-width:1000px">
                        <div class="cardd-body" style="max-width:1000px">
                            <h4 class="card-title">Yönetici Bilgileri</h4>
                            <div class="summary-card" style="max-width:1000px">
                                <div class="info-column">
                                    <img src="@Model.ProfilePhoto" alt="Yönetici Fotoğrafı" class="profile-img">
                                </div>
                                <div class="info-column">
                                    <p><strong>Ad:</strong> @Model.Adi @Model.IkinciAdi</p>
                                    <p><strong>Soyad:</strong> @Model.Soyadi @Model.IkinciSoyadi</p>
                                    <p><strong>Telefon:</strong> @Model.TelefonNumarasi</p>
                                    <p><strong>Doğum Tarihi:</strong> @Model.DogumTarihi</p>
                                    <p><strong>Doğum Yeri:</strong> @Model.DogumYeri</p>
                                </div>
                                <div class="info-column">
                                    <p><strong>TC Kimlik Numarası:</strong> @Model.TC</p>
                                    <p><strong>Email:</strong> @Model.Email</p>
                                    <p><strong>Departman:</strong> @Model.Departman</p>
                                    <p><strong>Adres:</strong> @Model.Adres</p>
                                    <a href="@Url.Action("EditProfile", "Home", new { area = "CompanyManager" })">
                                        <button class="btn-edit">Düzenle</button>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
   



    <!-- container-scroller -->
    <!-- plugins:js -->
    <script src="assets/vendors/js/vendor.bundle.base.js"></script>
    <!-- endinject -->

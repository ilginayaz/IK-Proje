        .cardd {
            border-radius: 15px;
            background: linear-gradient(to right, #FF0000, #FFA27F);
            padding: 20px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.15);
            max-width: 800px;
            margin: 30px;
            color: #ffffff;
        }

        .cardd-body {
            padding: 20px;
            background: #ffffff;
            border-radius: 10px;
            color: #333333;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
            height: 100%;
        }

        .card-title {
            font-size: 24px;
            margin-bottom: 20px;
            color: #FF0000;
            text-align: center;
        }

        .summary-card {
            display: flex;
            justify-content: space-between;
            gap: 20px;
            height: 100%;
        }

        .info-column {
            flex: 1;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }

            .info-column p {
                margin: 8px 0;
                font-size: 16px;
                font-weight: 500;
            }

        .btn-edit {
            display: block;
            width: 100%;
            padding: 10px;
            background-color: #FF0000;
            color: #FFA27F;
            font-weight: bold;
            border: none;
            border-radius: 5px;
            font-size: 16px;
            cursor: pointer;
            margin-top: 20px;
            transition: background-color 0.3s ease;
        }

            .btn-edit:hover {
                background-color: #FFA27F;
                color: #FF0000;
            }

        .profile-img {
            width: 100%;
            max-width: 150px;
            height: auto;
            border-radius: 50%;
            margin: 0 auto 20px auto;
            display: block;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }



        /* Popup için */

        .modal {
            display: none;
            position: fixed;
            z-index: 1;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            overflow: auto;
            background-color: rgba(0, 0, 0, 0.5);
        }


        .modal-content {
            background: linear-gradient(to right, #FF0000, #FFA27F);
            margin: 5% auto;
            padding: 20px;
            border-radius: 15px;
            width: 90%;
            max-width: 600px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.15);

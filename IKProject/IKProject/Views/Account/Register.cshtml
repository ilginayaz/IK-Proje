@using IKProject.Data.Enums
@model IKProject.Models.RegisterViewModel

@{
    ViewData["Title"] = "Kayıt Ol";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Register" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Email" class="control-label"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Password" class="control-label"></label>
        <input asp-for="Password" class="form-control" type="password" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ProfilePhoto" class="control-label"></label>
        <input asp-for="ProfilePhoto" class="form-control" type="file" />
        <span asp-validation-for="ProfilePhoto" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Adi" class="control-label"></label>
        <input asp-for="Adi" class="form-control" />
        <span asp-validation-for="Adi" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="IkinciAdi" class="control-label"></label>
        <input asp-for="IkinciAdi" class="form-control" />
        <span asp-validation-for="IkinciAdi" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Soyadi" class="control-label"></label>
        <input asp-for="Soyadi" class="form-control" />
        <span asp-validation-for="Soyadi" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="IkinciSoyadi" class="control-label"></label>
        <input asp-for="IkinciSoyadi" class="form-control" />
        <span asp-validation-for="IkinciSoyadi" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TelefonNumarasi" class="control-label"></label>
        <input asp-for="TelefonNumarasi" class="form-control" />
        <span asp-validation-for="TelefonNumarasi" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DogumTarihi" class="control-label"></label>
        <input asp-for="DogumTarihi" class="form-control" type="date" />
        <span asp-validation-for="DogumTarihi" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DogumYeri" class="control-label"></label>
        <select asp-for="DogumYeri" class="form-control">
            @foreach (var sehir in Enum.GetValues(typeof(Sehirler)))
            {
                <option value="@sehir">@sehir</option>
            }
        </select>
        <span asp-validation-for="DogumYeri" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TC" class="control-label"></label>
        <input asp-for="TC" class="form-control" />
        <span asp-validation-for="TC" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Sirket" class="control-label"></label>
        <select asp-for="Sirket" class="form-control">
            @foreach (var sirket in Enum.GetValues(typeof(Sirket)))
            {
                <option value="@sirket">@sirket</option>
            }
        </select>
        <span asp-validation-for="Sirket" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Departman" class="control-label"></label>
        <select asp-for="Departman" class="form-control">
            @foreach (var departman in Enum.GetValues(typeof(Departman)))
            {
                <option value="@departman">@departman</option>
            }
        </select>
        <span asp-validation-for="Departman" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Meslek" class="control-label"></label>
        <select asp-for="Meslek" class="form-control">
            @foreach (var meslek in Enum.GetValues(typeof(Meslek)))
            {
                <option value="@meslek">@meslek</option>
            }
        </select>
        <span asp-validation-for="Meslek" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Adres" class="control-label"></label>
        <textarea asp-for="Adres" class="form-control"></textarea>
        <span asp-validation-for="Adres" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Cinsiyet" class="control-label"></label>
        <select asp-for="Cinsiyet" class="form-control">
            @foreach (var cinsiyet in Enum.GetValues(typeof(Cinsiyet)))
            {
                <option value="@cinsiyet">@cinsiyet</option>
            }
        </select>
        <span asp-validation-for="Cinsiyet" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Kayıt Ol</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

